{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "UNet",
        "args": {}
    },
    "data_loader": {
        "type": "TomatoDataLoader",
        "args":{
            "data_dir": "data/grabpoints/test",
            "label_dir": "data/grabpoints/unpred",
            "batch_size": 3,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "cutoff": 1.5,
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
